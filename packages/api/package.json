{
  "name": "perso",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:server": "tsc -p .",
    "build:graphql": "copyfiles -u 1  --verbose \"./**/*.graphql\" ./build",
    "build": "yarn build:server && yarn build:graphql",
    "dev": "nodemon --ext ts --watch src/ --exec ts-node -r dotenv/config src/index.ts",
    "gen": "nodemon --ext ts --ext graphql --watch 'src/**/*.graphql' --watch 'src/schema.ts' --exec gql-gen"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "auth0": "^2.27.1",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-shield": "^5.3.0",
    "jwks-rsa": "^1.4.0",
    "lodash": "^4.17.11",
    "merge-graphql-schemas": "^1.5.8",
    "multer": "^1.4.1",
    "pg": "^7.8.2",
    "reflect-metadata": "^0.1.13",
    "throng": "^4.0.0",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/auth0": "^2.9.10",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "^0.0.42",
    "@types/graphql": "^14.0.7",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/lodash": "^4.14.122",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.30",
    "@types/throng": "^4.0.2",
    "copyfiles": "^2.1.0",
    "dotenv": "^6.2.0",
    "graphql-code-generator": "^0.17.0",
    "graphql-codegen-typescript-common": "^0.17.0",
    "graphql-codegen-typescript-resolvers": "^0.17.0",
    "graphql-codegen-typescript-server": "^0.17.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  }
}
